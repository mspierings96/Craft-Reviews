doctype html
html(lang="en")
  head
    title= pageTitle
    script(type='text/javascript').
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
#login-form
  h3.text-center.text-white.pt-5 
  .container
    #login-row.row.justify-content-center.align-items-center
      #login-column.col-md-6
        #login-box.col-md-12
          form#login-form.form(action='' method='post')
            h3.text-center.text-info.text-white Login
            .form-group
              label.text-info.text-white(for='email-login') Email:
              br
              input#email-login.form-control(type='text' name='email-login')
            .form-group
              label.text-info.text-white(for='password-login') Password:
              br
              input#password-login.form-control(type='text' name='password-login')
            .form-group
              label.text-info.text-white(for='remember-me')
                span Remember me
                span
                  input#remember-me(name='remember-me' type='checkbox')
              br
              input.btn.btn-info.btn-md(type='submit' name='submit' value='submit')
#signup-form
  h3.text-center.text-white.pt-5 
  .container
    #signup-row.row.justify-content-center.align-items-center
      #login-column.col-md-6
        #login-box.col-md-12
          form#login-form.form(action='' method='post')
            h3.text-center.text-info.text-white  Register
            .form-group
              label.text-info.text-white(for='username-signup' class='username-signup') Username:
              br
              input#username-signup.form-control(type='text' name='username-signup')
            .form-group
              label.text-info.text-white(for='email-signup') Email:
              br
              input#email-signup.form-control(type='text' name='email-signup')  
            .form-group
              label.text-info.text-white(for='password-signup') Password:
              br
              input#password-signup.form-control(type='text' name='password-signup')
            .form-group
              input.btn.btn-info.btn-md(type='submit' name='submit' value='submit')
            #register-link.text-right

            include layouts/footer.pug
              
    script(src='/javascript/login.js')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js', integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js', integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4', crossorigin='anonymous')